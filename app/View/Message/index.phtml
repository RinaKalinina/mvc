<?php /** @var app\Model\Message $message */?>
<?php if ($messages): ?>
    <?php foreach ($messages as $message): ?>
        <div>
            <p><?= $message->user->name ?></p>
            <p><?= $message->text ?></p>
            <?php if ($message->getImg()) : ?>
                <div><img src="<?= $message->getImg() ?>" alt=""></div>
            <?php endif; ?>
            <br>

            <? if (isset($isAdmin)): ?>
                <form action="/message/delete" method="post">
                    <input type="hidden" name="id" value="<?= $message->id ?>">
                    <input type="submit" value="Удалить">
                </form>
            <?php endif; ?>
        </div>
        <hr>
    <?php endforeach; ?>
<?php else: ?>
    <p>Сообщений не найдено</p>
<?php endif; ?>